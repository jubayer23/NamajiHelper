<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creative.namajihelper">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".appdata.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        /*************************************MAIN ACTIVITY*******************************************/

        <activity android:name=".MainActivity">
        </activity>

        /*************************************LOGIN ACTIVITY*******************************************/
        <activity
            android:name=".userview.LoginActivity"
            android:label="@string/login_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        /*************************************MOSQUE REGISTER ACTIVITY*************************************/
        <activity
            android:name=".userview.RegisterMosque"
            android:label="@string/mosque_register_activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".userview.LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".userview.LoginActivity" />
        </activity>

        /*************************************MOSQUE REGISTER ACTIVITY*************************************/
        <activity
            android:name=".userview.RegisterNamaji"
            android:label="@string/namaji_register_activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".userview.LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".userview.LoginActivity" />
        </activity>

        /*************************************MOSQUE HOME ACTIVITY*************************************/
        <activity
            android:name=".MosqueHome"
            android:label="@string/mosque_home_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        /*************************************NAMAJI HOME ACTIVITY*************************************/
        <activity
            android:name=".NamajiHome"
            android:label="@string/namaji_home_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        /*************************************SEARCH RESULT ACTIVITY*************************************/
        <activity
            android:name=".NamajiSearchResult"
            android:label="@string/search_result"
            android:screenOrientation="portrait"
            android:parentActivityName=".NamajiHome"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NamajiHome" />
        </activity>

        /*************************************SEARCH MOSQUE DETAILS ACTIVITY*************************************/
        <activity
            android:name=".SearchMosqueDetails"
            android:label="@string/search_mosque_detals"
            android:screenOrientation="portrait"
            android:parentActivityName=".NamajiSearchResult"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NamajiSearchResult" />
        </activity>

        /*************************************META DATA******************************************************/
        <!-- Goolge API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBCY4ekfsMbuHBqB4cCSc4fA3M6YC3Isr4" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>